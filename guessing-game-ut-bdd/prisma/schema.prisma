// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id      String   @id
  status  String
  winner  String?
  players Player[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id              Int      @id @default(autoincrement())
  gameId          String
  role            String
  name            String
  secret          String?
  hasChangedSecret Boolean @default(false)
  game            Game     @relation(fields: [gameId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([gameId, role])
}